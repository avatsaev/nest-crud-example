{
  "name": "nest-crud-example",
  "version": "2.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest --config=jest.json",
    "test:watch": "jest --watch --config=jest.json",
    "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "e2e": "jest --config=e2e/jest-e2e.json",
    "e2e:watch": "jest --watch --config=e2e/jest-e2e.json",
    "start": "node index.js",
    "watch": "tsc -w",
    "serve": "nodemon -e ts --watch src --exec \"npm run build && npm run start\" "
  },
  "dependencies": {
    "@nestjs/common": "^4.2.2",
    "@nestjs/core": "^4.2.2",
    "@nestjs/microservices": "^4.2.2",
    "@nestjs/testing": "^4.2.2",
    "body-parser": "^1.18.2",
    "pg": "^7.4.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "typeorm": "^0.1.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.0.39",
    "@types/node": "^8.0.53",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.14",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
